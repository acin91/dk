{% extends 'DkAppBundle:Backend/Warehouse:layout.html.twig' %}

{% block data %}
<h1 class="page-header">Склад</h1>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Название</th>
                <th>Категория</th>
                <th>Объем (порций или мл)</th>
                <th>Сумма</th>
                <th>Дата обновления</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>{% include 'DkAppBundle:Backend/Warehouse:_list_row.html.twig' with {'object': item} only %}</tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}